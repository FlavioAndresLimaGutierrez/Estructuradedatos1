carrito = []
""" Programa que simula un carrito de compras
    en una zapaterÃ­a usando una lista dinÃ¡mica.
"""

def agregar_producto():
    """FunciÃ³n para agregar productos al carrito de zapaterÃ­a."""
    producto = input("ğŸ‘ Producto a agregar (ej: Zapatillas, Botines, Sandalias): ")
    carrito.append(producto)
    print(f"âœ… {producto} agregado al carrito.")


def ver_carrito():
    """FunciÃ³n para mostrar el contenido del carrito."""
    if not carrito:
        print("\nğŸ›’ El carrito estÃ¡ vacÃ­o.")
    else:
        print("\nğŸ›’ Carrito de compras:")
        for i, producto in enumerate(carrito, start=1):
            print(f"{i}. {producto}")


def main():
    """FunciÃ³n principal del programa."""
    while True:
        print("\n=== MENÃš ZAPATERÃA ===")
        print("1. Agregar ")
        print("2. Ver ")
        print("3. Salir")
        opcion = input("OpciÃ³n: ")
        
        if opcion == "1":
            agregar_producto()
        elif opcion == "2":
            ver_carrito()
        elif opcion == "3":
            print("ğŸ‘‹ Gracias por su compra en la zapaterÃ­a. Â¡Vuelva pronto!")
            break
        else:
            print(" OpciÃ³n invÃ¡lida, intente de nuevo.")


if __name__ == '__main__':
    main()
