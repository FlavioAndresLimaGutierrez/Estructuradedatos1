# üè™ Ejemplo de ADT Est√°ticos 

# ----------- ESTRUCTURA EST√ÅTICA (Diccionario de productos fijos) ------------
Productos = {
    '001': {'nombre': 'L√°piz', 'precio': 1.5, 'stock': 10},
    '002': {'nombre': 'Lapicera', 'precio': 2.0, 'stock': 8},
    '003': {'nombre': 'Borrador', 'precio': 0.8, 'stock': 12},
    '004': {'nombre': 'Caja de Colores', 'precio': 5.5, 'stock': 5},
    '005': {'nombre': 'Marcador', 'precio': 1.2, 'stock': 15}
}

# ----------- ESTRUCTURA DIN√ÅMICA (Carrito de compras) ---------------------
carrito = []


# ----------- FUNCIONES EST√ÅTICAS ------------------------------------------
def mostrar_productos():
    """Muestra los productos disponibles"""
    print('\nüì¶ Productos disponibles:')
    print('#' * 40)
    for codigo, datos in Productos.items():
        print(f'C√≥digo: {codigo}')
        print(f'  Producto: {datos["nombre"]}')
        print(f'  Precio  : ${datos["precio"]}')
        print(f'  Stock   : {datos["stock"]}')
        print('-' * 40)


def comprar_producto():
    """Permite comprar un producto y agregarlo al carrito"""
    codigo = input("üëâ Ingresa el c√≥digo del producto a comprar: ")
    
    if codigo in Productos:
        if Productos[codigo]['stock'] > 0:
            Productos[codigo]['stock'] -= 1
            carrito.append(Productos[codigo]['nombre'])
            print(f"‚úÖ Compra exitosa de: {Productos[codigo]['nombre']}")
            print(f"   Stock restante: {Productos[codigo]['stock']}")
        else:
            print("‚ùå No hay stock disponible")
    else:
        print("‚ùå C√≥digo no v√°lido")


# ----------- FUNCIONES DIN√ÅMICAS ------------------------------------------
def ver_carrito():
    """Muestra el carrito din√°mico"""
    if len(carrito) == 0:
        print("\nüõí Tu carrito est√° vac√≠o")
    else:
        print("\nüõí Carrito de compras:")
        for i, producto in enumerate(carrito, start=1):
            print(f"{i}. {producto}")


# ----------- PROGRAMA PRINCIPAL -------------------------------------------
def main():
    print("üìñ SISTEMA DE PAPELER√çA")
    print("=" * 40)
    
    while True:
        print("\nOpciones:")
        print("1. Ver productos (EST√ÅTICA)")
        print("2. Comprar producto (agregar al carrito)")
        print("3. Ver carrito (DIN√ÅMICA)")
        print("4. Salir")
        
        opcion = input("Elige una opci√≥n: ")
        
        if opcion == "1":
            mostrar_productos()
        elif opcion == "2":
            comprar_producto()
        elif opcion == "3":
            ver_carrito()
        elif opcion == "4":
            print("¬°Gracias por visitar la papeler√≠a! üëã")
            break
        else:
            print("‚ùå Opci√≥n no v√°lida")


if __name__ == '__main__':
    main()
